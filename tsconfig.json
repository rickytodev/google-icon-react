{
  "compilerOptions": {
    "outDir": "dist/",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "dist/",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src"]
}
